---
import ReactLogo from '@/components/icons/ReactLogo.astro';

interface Props {
  title: string;
  location: string;
  datetime: string;
  link: string;
  icon: string;
}

const icons = {
  react: ReactLogo,
};

const { title, location, datetime, link, icon } = Astro.props;

// @ts-ignore
const IconComponent = icons[icon];
---

<div class="mb-6">
  <a
    href={link}
    class="flex items-center gap-x-2 text-primary hover:opacity-80 text-xl mb-2"
    target="_blank"
  >
    {IconComponent && <IconComponent />}
    <h3 class="font-bold">{title}</h3>
  </a>
  <p class="text-gray-500 font-thin md:text-xl">
    {location}
  </p>
  <p class="text-gray-500 font-thin">
    {datetime}
  </p>
</div>
