---
import ArrowUpRight from '@/components/icons/ArrowUpRight.astro';

interface Props {
  title: string;
  company: string;
  description: string;
  link?: string;
  date: string;
}

const { title, company, description, link, date } = Astro.props;
---

<div>
  <div
    class="absolute w-3 h-3 bg-green-400 rounded-full mt-2 -start-1.5 bg-gradient-to-r from-green-400 to-green-500"
  >
  </div>
  <time class="mb-1 text-sm font-normal leading-none tracking-tight text-gray-500 dark:text-white"
    >{date}</time
  >
  <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
    {title}
  </h3>
  <h4 class="group text-pretty text-sm text-primary hover:opacity-80 mb-2">
    <a class="flex items-center" href={link} target="_blank">
      <span>{company}</span>
      <ArrowUpRight
        class="size-4 text-primary opacity-50 group-hover:opacity-100 group-hover:translate-x-[1.5px] transition duration-200"
      />
    </a>
  </h4>
  <p class="mb-4 text-sm text-gray-500 dark:text-white text-pretty" set:html={description} />
</div>
