---
import ArrowUpRight from '@/components/icons/ArrowUpRight.astro';

interface Props {
  title: string;
  company: string;
  description: string;
  link?: string;
  date: string;
}

const { title, company, description, link, date } = Astro.props;
---

<div>
  <div
    class="absolute w-3 h-3 bg-green-400 rounded-full mt-2 -start-1.5 bg-gradient-to-r from-green-400 to-green-500"
  >
  </div>
  <time
    class="mb-2 text-sm font-mono font-normal text-neutral-600 leading-none tracking-tight dark:text-neutral-400"
    >{date}</time
  >
  <div class="mt-2 flex flex-col space-y-0.5">
    <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
      {title}
    </h3>
    <h4
      class="group text-pretty text-sm text-neutral-600 hover:opacity-100 duration-150 dark:text-white dark:opacity-80 dark:hover:opacity-100 dark:hover:text-white hover:text-black mb-2"
    >
      <a class="flex items-center" href={link} target="_blank">
        <span>{company}</span>
        <ArrowUpRight
          class="size-4 group-hover:opacity-100 group-hover:translate-x-[1.5px] transition duration-150"
        />
      </a>
    </h4>
  </div>
  <p class="mb-4 mt-3 text-sm dark:text-neutral-400 text-pretty" set:html={description} />
</div>
